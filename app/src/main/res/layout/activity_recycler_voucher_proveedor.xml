<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="2dp"
                    android:text=" ID Comprobante" />

                <TextView
                    android:id="@+id/idcomprobante"
                    android:layout_width="202dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="5dp"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="2dp"
                    android:text="Rut Proveedor:" />

                <TextView
                    android:id="@+id/rut_prove"
                    android:layout_width="202dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="2dp"
                    android:text="Razon Social:" />

                <TextView
                    android:id="@+id/nombre_prove"
                    android:layout_width="202dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="2dp"
                    android:text=" Fecha Venta:" />

                <TextView
                    android:id="@+id/fecha_venta"
                    android:layout_width="202dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="2dp"
                    android:text=" Total $:" />

                <TextView
                    android:id="@+id/total_pro"
                    android:layout_width="129dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="5dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="2dp"
                    android:text=" Estado :" />

                <TextView
                    android:id="@+id/estadop"
                    android:layout_width="129dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="5dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cerrar"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginRight="25dp"
                android:layout_weight="0"
                android:text="Cerrar operacion"
                android:textSize="10dp" />

            <Button
                android:id="@+id/consultap"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:text="Ver Detalle"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>