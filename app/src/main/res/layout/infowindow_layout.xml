<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4AFF9800"
    android:orientation="vertical">


    <TextView
        android:id="@+id/info_window_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="5dp"
        android:text="proveedor"
        android:textSize="13sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Categorias:"
        android:textSize="12sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/info_window_placas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_window_nombre"
        android:paddingLeft="5dp"
        android:text="Estado: Activo"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/info_window_estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_window_placas"
        android:paddingLeft="5dp"
        android:text="Estado: Activo"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/info_window_estado2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_window_placas"
        android:paddingLeft="5dp"
        android:text="Estado: Activo"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/info_window_estado3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_window_placas"
        android:paddingLeft="5dp"
        android:text="Estado: Activo"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/info_window_estado4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_window_placas"
        android:paddingLeft="5dp"
        android:text="Estado: Activo"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="104dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="vuelva a presionar el marcador para ver el proveedor"
        android:textSize="10sp"
        android:textStyle="bold|italic" />


</LinearLayout>